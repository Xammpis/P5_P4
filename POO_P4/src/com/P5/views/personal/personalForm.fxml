<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane alignment="center" hgap="10" prefHeight="500.0" prefWidth="500.0" vgap="10"
          xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.P5.controllers.personal.PersonalFormController">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <children>
        <Pane prefHeight="500.0" prefWidth="500.0">
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
            </padding>
            <children>
                <Label fx:id="formTitle" alignment="CENTER" contentDisplay="CENTER" layoutX="174.0" layoutY="28.0"
                       text="Nuevo Empleado" textAlignment="CENTER" wrapText="true">
                    <font>
                        <Font size="20.0"/>
                    </font>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </Label>
                <Button fx:id="proyectoLayoutBtn" layoutX="14.0" layoutY="18.0" mnemonicParsing="false"
                        onAction="#goToPersonalLayout" text="Atrás"/>
                <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" layoutX="16.0" layoutY="80.0" prefHeight="20.0"
                       prefWidth="154.0" text="Nombre">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="nombreField" layoutX="178.0" layoutY="78.0" prefHeight="25.0" prefWidth="285.0"/>
                <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" layoutX="16.0" layoutY="110.0" prefHeight="20.0"
                       prefWidth="154.0" text="NIF">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="nifField" layoutX="178.0" layoutY="108.0" prefHeight="25.0" prefWidth="285.0"/>
                <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" layoutX="16.0" layoutY="140.0" prefHeight="20.0"
                       prefWidth="154.0" text="Dirección">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="direccionField" layoutX="178.0" layoutY="138.0" prefHeight="25.0" prefWidth="285.0"/>
                <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" layoutX="16.0" layoutY="170.0" prefHeight="20.0"
                       prefWidth="154.0" text="Delegación" textAlignment="RIGHT">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <ChoiceBox fx:id="selectDelegacionField" layoutX="178.0" layoutY="168.0" prefHeight="25.0"
                           prefWidth="285.0"/>
                <Button fx:id="saveBtn" layoutX="51.0" layoutY="425.0" mnemonicParsing="false"
                        onAction="#addNewEmpleado" prefHeight="45.0" prefWidth="399.0" text="Guardar"/>
            </children>
        </Pane>
    </children>
</GridPane>
